{% extends 'base.html.twig' %}

{% block title %}Skema - Dashboard{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div>
    <h1>Tableau de bord synthétique de suivi de l'année en cours</h1>
    <hr />
    <div class="py-2">
        <h2>État des candidatures</h2>
        {{ render(path('dashboard_candidate_reporting')) }}
    </div>

    <div class="py-5">
        <h2>Documents à contrôler</h2>
        {{ render(path('dashbord_media_to_validate_reporting')) }}
    </div>

    <div class="py-5">
        <h2>Documents manquants</h2>
        {{ render(path('dashbord_media_missing_reporting')) }}
    </div>

    <div class="py-5">
        <h2>Candidats</h2>
        {{ render(path('dashboard_candidate_admissible')) }}
    </div>
</div>
{% endblock %}
