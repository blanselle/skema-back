{{ form_start(form) }}

<div class="row">
    {{ include('partial/_flash_messages.html.twig') }}
</div>

<div class="row">
    <div class="col">{{ form_row(form.score) }}</div>
</div>
<div class="row">
    <div class="col">{{ form_row(form.programChannels) }}</div>
</div>
<div class="save_container">
    <div>{{ form_row(form.simulate) }}</div>
    {% if form.save is defined %}
    <div style="margin-left:15px;margin-right:15px;">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#admissibleModal">
            Sauvegarder
        </button>
    </div>
    {% endif %}
    {% if form.export is defined %}<div>{{ form_row(form.export) }}</div>{% endif %}

    <div class="modal fade" id="admissibleModal" tabindex="-1" aria-labelledby="admissibleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row p-5" id="modal-coefficient-list">
                        {{ include('admissibility/_coefficent_list.html.twig') }}
                    </div>

                    <div class="row">
                        <p>Confirmez-vous la validation des admissibles?</p>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="mb-3">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    </div>
                    {% if form.save is defined %}
                        {{ form_row(form.save) }}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{{ form_end(form) }}