{% extends 'base.html.twig' %}

{% block title %}Épreuves orales - Sudoku{% endblock title %}

{% block page_title %}Épreuves orales - Sudoku{% endblock page_title %}

{% block main %}

    <div id="sudoku-configure" class="row">

        <ul class="nav nav-tabs" id="configuration-tab" role="tablist">
            {% for campus in campuses %}
                <li class="nav-item" role="presentation">
                    <button class="nav-link {{ (loop.index == 1)? 'active' : '' }}" id="campus-{{ campus.id }}-tab" data-bs-toggle="tab" data-bs-target="#campus-{{ campus.id }}-tab-pane" type="button" role="tab" aria-controls="campus-{{ campus.id }}-tab-pane" aria-selected="{{ (loop.index == 1 )? 'true' : 'false' }}">{{ campus }}</button>
                </li>
            {% endfor %}
        </ul>

        <div class="tab-content pt-5" id="configuration-tab-content">
            {% for campus in campuses %}
                <div class="campus-configuration-form">
                {{ render(path('sudoku_initialization_init_campus_configuration_form', {sudoku: sudoku.id, campus: campus.id})) }}
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock main %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('js/sudoku-configure.js') }}" type="text/javascript"></script>
{% endblock %}