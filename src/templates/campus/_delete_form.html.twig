<form method="post" action="{{ path('campus_delete', {'id': campus.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer ce campus ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ campus.id) }}">
    <button class="btn btn-danger action-delete"><i class="bi bi-trash"></i></button>
</form>